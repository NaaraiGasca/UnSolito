<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".Imagenes">

        <TextView
            android:id="@+id/txtITitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="50dp"
            android:text="@string/imagenes"
            tools:ignore="MissingConstraints"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/imgIF1"
            android:layout_width="0dp"
            android:layout_height="256dp"
            android:visibility="visible"
            app:srcCompat="@drawable/img8"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints,Suspicious0dp"
            app:layout_constraintTop_toBottomOf="@+id/txtITitulo"/>

        <ImageView
            android:id="@+id/imgIF2"
            android:layout_width="120dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIF1"
            android:visibility="visible"
            app:srcCompat="@drawable/img7"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/imgIF3"
            android:layout_width="120dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIF1"
            app:layout_constraintStart_toEndOf="@+id/imgIF2"
            android:visibility="visible"
            app:srcCompat="@drawable/img0"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/imgIF4"
            android:layout_width="120dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIF1"
            app:layout_constraintStart_toEndOf="@+id/imgIF3"
            android:visibility="visible"
            app:srcCompat="@drawable/shei"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/imgIF5"
            android:layout_width="0dp"
            android:layout_height="240dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIF2"
            android:visibility="visible"
            app:srcCompat="@drawable/uapt"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/imgIF6"
            android:layout_width="180dp"
            android:layout_height="110dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIF5"
            android:visibility="visible"
            app:srcCompat="@drawable/sho"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/imgIF7"
            android:layout_width="180dp"
            android:layout_height="110dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIF5"
            app:layout_constraintStart_toEndOf="@+id/imgIF6"
            android:visibility="visible"
            app:srcCompat="@drawable/ivis"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/imgIF8"
            android:layout_width="120dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIF6"
            android:visibility="visible"
            app:srcCompat="@drawable/past"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/imgIF9"
            android:layout_width="120dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIF6"
            app:layout_constraintStart_toEndOf="@+id/imgIF8"
            android:visibility="visible"
            app:srcCompat="@drawable/amixes"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/imgIF0"
            android:layout_width="120dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIF6"
            app:layout_constraintStart_toEndOf="@+id/imgIF9"
            android:visibility="visible"
            app:srcCompat="@drawable/lacia"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_margin="15dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>